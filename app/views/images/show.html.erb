<div class="full-image">
  <%= image_tag @image.url %>
  <p><%= @image.title %></p>
  <p><%= @image.author %></p>
  <p>Likes: <%= @image.likes %></p>
  <div class="image-links">
   <%= link_to "Edit Image", edit_image_path(@image) %> |
   <%= link_to "Like Image", like_image_path(id: @image.id)   %>
  <%= link_to "Delete Image", @image, method: :delete, data: {confirm: "Are you sure you want to delete this image?"} %>
  </div>
  <%= link_to "Back to Images", images_url %>
</div>